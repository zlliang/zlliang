---
import Link from '@/components/Link.astro'

interface Props {
  href: string
  icon?: string
  inline?: boolean
}

const { href, icon, inline = false } = Astro.props
---

<Link
  href={href}
  icon={icon}
  class:list={['inline-block px-1 py-0.5 border border-slate-200 hover:border-sky-300 text-sm text-slate-500 hover:text-sky-500 transition-colors', inline && 'translate-y-[-1px]']}
>
  <slot />
</Link>
