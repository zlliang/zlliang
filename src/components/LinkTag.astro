---
interface Props {
  href: string
  icon: string
}

const { href, icon } = Astro.props
---

<a href={href} class="inline-block px-1 py-0.5 border border-slate-200 hover:border-sky-300 text-sm text-slate-500 hover:text-sky-500 transition-colors">
  <span class={icon}></span>
  <span><slot /></span>
</a>
