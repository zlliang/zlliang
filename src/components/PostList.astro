---
import Section from "@/components/Section.astro"
import Link from "@/components/Link.astro"
import Tag from "@/components/Tag.astro"
import DraftTag from "@/components/DraftTag.astro"

import { getTags, groupByYear } from "@/content"
import { format } from "@/utils/date"

import type { CollectionEntry } from "astro:content"

interface Props {
  posts: CollectionEntry<"posts">[]
  showTags?: boolean
}

const { posts, showTags = true } = Astro.props
const groups = groupByYear(posts)
const tags = getTags(posts)
---

<div class="space-y-12">
  <!-- Tags -->
  {showTags && tags.length > 0 && (
    <Section title="Tags" class="flex flex-wrap gap-2">
      {tags.map(tag => (
        <Tag href={`/posts/tags/${tag}`}>{tag}</Tag>
      ))}
    </Section>
  )}

  <!-- Posts -->
  {groups.map(({ year, posts }) => (
    <Section title={year}>
      {posts.map(post => (
        <div class="flex justify-between gap-4 my-1">
          <span>
            <Link href={`/posts/${post.id}`}>{post.data.title}</Link>
            {post.data.draft && <DraftTag class="ml-1" />}
          </span>
          <span class="shrink-0 w-fit text-neutral-500 dark:text-neutral-400">
            {showTags && post.data.tags && post.data.tags.length > 0 && (
              <span class="inline-flex gap-2 mr-1">
                {post.data.tags.map(tag => (
                  <Tag href={`/posts/tags/${tag}`}>{tag}</Tag>
                ))}
              </span>
            )}
            <span>{format(post.data.created, "MMM d")}</span>
          </span>
        </div>
      ))}
    </Section>
  ))}
</div>
