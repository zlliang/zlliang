---
import '@splidejs/splide/css'

import image1 from '@/assets/images/profile-slide/1.jpg'
import image2 from '@/assets/images/profile-slide/2.jpg'
import image3 from '@/assets/images/profile-slide/3.jpg'
import image4 from '@/assets/images/profile-slide/4.jpg'
import image5 from '@/assets/images/profile-slide/5.jpg'
import image6 from '@/assets/images/profile-slide/6.jpg'
import image7 from '@/assets/images/profile-slide/7.jpg'
import image8 from '@/assets/images/profile-slide/8.jpg'
---

<div class="select-none pointer-events-none">
  <div class="splide">
    <div class="splide__track">
      <ul class="splide__list">
        <li class="splide__slide"><img src={image1.src} alt={`Slide 1`} class="h-48" /></li>
        <li class="splide__slide"><img src={image2.src} alt={`Slide 2`} class="h-48" /></li>
        <li class="splide__slide"><img src={image3.src} alt={`Slide 3`} class="h-48" /></li>
        <li class="splide__slide"><img src={image4.src} alt={`Slide 4`} class="h-48" /></li>
        <li class="splide__slide"><img src={image5.src} alt={`Slide 5`} class="h-48" /></li>
        <li class="splide__slide"><img src={image6.src} alt={`Slide 6`} class="h-48" /></li>
        <li class="splide__slide"><img src={image7.src} alt={`Slide 7`} class="h-48" /></li>
        <li class="splide__slide"><img src={image8.src} alt={`Slide 8`} class="h-48" /></li>
      </ul>
    </div>
  </div>
</div>

<script>
import Splide from '@splidejs/splide'
import { AutoScroll } from '@splidejs/splide-extension-auto-scroll'

function init() {
  new Splide('.splide', {
    gap: '14px',
    type: 'loop',
    autoWidth: true,
    arrows: false,
    pagination: false,
    drag: false,
    autoScroll: {
      speed: 0.5,
      pauseOnFocus: false,
      pauseOnHover: false,
    },
  }).mount({ AutoScroll })
}

document.addEventListener('astro:page-load', init)
</script>
