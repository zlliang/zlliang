---
import PostItem from "@/components/PostItem.astro"
import NoteItem from "@/components/NoteItem.astro"
import Divider from "@/components/Divider.astro"

import type { CollectionEntry } from "astro:content"

interface Props {
  entries: CollectionEntry<"entries">[]
  showTags?: boolean
}

const { entries, showTags = true } = Astro.props
---

{entries.map(entry => (
  <Fragment>
    {entry.data.type === "post" ? (
      <PostItem entry={entry} showTags={showTags} />
      ) : (
      <NoteItem entry={entry} showTags={showTags} />
    )}
  </Fragment>
  <Divider class="last:hidden" />
))}
