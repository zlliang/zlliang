---
import { getEntry } from "astro:content"

import Layout from "@/components/Layout.astro"
import PostContent from "@/components/PostContent.astro"
import TableOfContents from "@/components/TableOfContents.astro"

import { translatedPosts, buildHreflang } from "@/utils/content"

import type { GetStaticPaths } from "astro"

export const getStaticPaths = (() => translatedPosts.map((post) => ({
  params: { lang: post.data.lang, slug: post.id.slice(post.data.lang.length + 1) },
  props: { post },
}))) satisfies GetStaticPaths

const { post } = Astro.props
const original = await getEntry(post.data.original)
const hreflang = buildHreflang(original, Astro.site!)
---

<Layout title={post.data.title} hreflang={hreflang}>
  <!-- Content -->
  <PostContent post={post} created={original.data.created} draft={original.data.draft} />

  <!-- Table of contents -->
  <TableOfContents
    slot="aside-prefix"
    post={post}
    class="hidden lg:block"
  />
</Layout>
