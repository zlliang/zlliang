---
import { Image } from "astro:assets"

import Layout from "@/components/Layout.astro"
import Link from "@/components/Link.astro"

import { renderFragment } from "@/utils/content"

import logoTech from "@/assets/images/logo-tech.png"
import logoDays from "@/assets/images/logo-days.png"

const Bio = await renderFragment("bio-zh")
---

<Layout lang="zh">
  <Bio />
  <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
    <Link href="https://tech.zlliang.me" external={false} class="flex gap-4 p-4 border border-neutral-200 dark:border-neutral-800 hover:border-blue-200 dark:hover:border-blue-800 hover:bg-blue-50 dark:hover:bg-blue-950 secondary">
      <Image src={logoTech} alt="tech.zlliang.me 的图标" class="size-8" loading="eager" />
      <div class="flex-1">
        <div class="font-bold">子龙的技术博客</div>
        <div class="text-sm opacity-60">tech.zlliang.me</div>
        <div class="mt-2 text-sm">英语博客，记录我的技术笔记和文章</div>
      </div>
    </Link>
    <Link href="https://days.zlliang.me" external={false} class="flex gap-4 p-4 border border-neutral-200 dark:border-neutral-800 hover:border-blue-200 dark:hover:border-blue-800 hover:bg-blue-50 dark:hover:bg-blue-950 secondary">
      <Image src={logoDays} alt="days.zlliang.me 的图标" class="size-8" loading="eager" />
      <div class="flex-1">
        <div class="font-bold">子龙的生活手记</div>
        <div class="text-sm opacity-60">days.zlliang.me</div>
        <div class="mt-2 text-sm">中文手记，记录我的日常生活和感悟</div>
      </div>
    </Link>
  </div>
</Layout>
