{
  "name": "zlliang",
  "version": "0.0.0",
  "private": true,
  "workspaces": ["websites/*"],
  "scripts": {
    "new:tech": "bun run --cwd websites/tech new",
    "new:days": "bun run --cwd websites/days new",
    "ship:tech": "bun run --cwd websites/tech ship",
    "ship:days": "bun run --cwd websites/days ship",
    "dev:www": "bun run --cwd websites/www dev",
    "dev:tech": "bun run --cwd websites/tech dev",
    "dev:days": "bun run --cwd websites/days dev",
    "build:www": "bun run --cwd websites/www build",
    "build:tech": "bun run --cwd websites/tech build",
    "build:days": "bun run --cwd websites/days build",
    "dev": "bun run --filter '*' dev",
    "build": "bun run --filter '*' build",
    "up": "bun update --filter '*'"
  }
}
